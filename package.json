{
  "name": "script-hub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:manifest": "node scripts/build-manifest.js",
    "build:css": "tailwindcss -i ./public/styles.css -o ./public/output.css",
    "build": "npm run build:manifest && npm run build:css",
    "deploy": "npm run build && wrangler deploy",
    "dev": "wrangler dev"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "marked": "^12.0.0",
    "tailwindcss": "^3.4.1",
    "wrangler": "^3.0.0"
  }
}
