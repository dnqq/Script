{
  "name": "script-workers",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build:manifest": "node scripts/build.js",
    "build:css": "node node_modules/tailwindcss/lib/cli.js -i ./public/styles.css -o ./public/output.css",
    "build": "npm run build:manifest && npm run build:css",
    "deploy": "wrangler deploy",
    "dev:css": "node node_modules/tailwindcss/lib/cli.js -i ./public/styles.css -o ./public/output.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "wrangler": "^3.0.0"
  }
}
